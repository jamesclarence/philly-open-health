%h1 Listing datasets

%table.table.table-striped
  %tr
    %th Title
    %th Description
    %th Create Date
    %th
    %th
    %th

  - @datasets.each do |dataset|
    %tr
      %td= link_to dataset.title, dataset
      %td= dataset.description
      %td= dataset.createdate
      %td= link_to 'Show', dataset, class: "btn btn-default"
      %td= link_to 'Edit', edit_dataset_path(dataset), class: "btn btn-default"
      %td= link_to 'Destroy', dataset, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger"

= link_to 'New Data set', new_dataset_path, class: "btn btn-info"
